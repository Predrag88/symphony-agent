{% extends 'base.html.twig' %}

{% block title %}Product AI - Result{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                ðŸŽ¨ Product AI Generator
            </h1>
            <p class="text-xl text-gray-600">
                Your AI-generated product image is ready!
            </p>
        </div>

        <!-- Result Card -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="p-8">
                <!-- Success Message -->
                <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-green-800 font-medium">Image generated successfully!</span>
                    </div>
                </div>

                <!-- Download Section -->
                <div class="text-center">
                    <div class="mb-6">
                        <h2 class="text-2xl font-semibold text-gray-900 mb-4">
                            Download Your Generated Image
                        </h2>
                        <p class="text-gray-600 mb-6">
                            Click the button below to download your AI-generated product image.
                        </p>
                    </div>

                    <!-- Download Button -->
                    <div class="mb-8">
                        <a id="downloadBtn" href="#" 
                           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-indigo-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Download Image
                        </a>
                    </div>

                    <!-- Status Display -->
                    <div id="statusDisplay" class="hidden mb-6">
                        <div class="inline-flex items-center px-4 py-2 bg-blue-50 border border-blue-200 rounded-lg">
                            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-blue-600 mr-2"></div>
                            <span class="text-blue-800">Processing your request...</span>
                        </div>
                    </div>

                    <!-- Error Display -->
                    <div id="errorDisplay" class="hidden mb-6">
                        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-red-800" id="errorMessage">An error occurred</span>
                            </div>
                        </div>
                    </div>

                    <!-- Back to Form -->
                    <div class="pt-6 border-t border-gray-200">
                        <a href="{{ path('product_ai_generator') }}" 
                           class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Generate Another Image
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

<script>
$(document).ready(function() {
    // Get download URL from URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    const downloadUrl = urlParams.get('downloadUrl');
    
    if (downloadUrl) {
        $('#downloadBtn').attr('href', downloadUrl);
    } else {
        // If no download URL, show error
        $('#errorDisplay').removeClass('hidden');
        $('#errorMessage').text('No download URL provided');
        $('#downloadBtn').addClass('opacity-50 cursor-not-allowed').removeAttr('href');
    }
    
    // Handle download button click
    $('#downloadBtn').on('click', function(e) {
        if (!$(this).attr('href') || $(this).attr('href') === '#') {
            e.preventDefault();
            return;
        }
        
        // Show status
        $('#statusDisplay').removeClass('hidden');
        
        // Hide status after a delay
        setTimeout(function() {
            $('#statusDisplay').addClass('hidden');
        }, 2000);
    });
});
</script>
{% endblock %}