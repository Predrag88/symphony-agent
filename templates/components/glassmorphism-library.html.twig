<script>
// Helper funkcije za glassmorphism komponente

// Funkcija za kreiranje primarnog dugmeta
function createGlassmorphismButton(text, icon = '', type = 'primary') {
    const button = document.createElement('button');
    button.className = `glassmorphism-btn-${type}`;
    
    const styles = {
        primary: {
            background: 'linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(147,197,253,0.05) 100%)',
            border: '1px solid rgba(59,130,246,0.2)',
            color: '#1e40af',
            fontWeight: '600'
        },
        secondary: {
            background: 'linear-gradient(135deg, rgba(255,255,255,0.7) 0%, rgba(248,250,252,0.5) 100%)',
            border: '1px solid rgba(226,232,240,0.3)',
            color: '#64748b',
            fontWeight: '500'
        }
    };
    
    const style = styles[type] || styles.primary;
    
    Object.assign(button.style, {
        background: style.background,
        backdropFilter: 'blur(8px)',
        border: style.border,
        borderRadius: '12px',
        padding: '12px 24px',
        color: style.color,
        fontWeight: style.fontWeight,
        transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)',
        boxShadow: '0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06)',
        cursor: 'pointer',
        textDecoration: 'none',
        display: 'inline-flex',
        alignItems: 'center',
        justifyContent: 'center'
    });
    
    button.innerHTML = icon ? `<i class="${icon} me-2" style="font-size: 1.1em;"></i>${text}` : text;
    
    // Dodaj hover efekte
    button.addEventListener('mouseover', function() {
        this.style.transform = 'translateY(-2px)';
        this.style.boxShadow = '0 10px 25px -3px rgba(59,130,246,0.3), 0 4px 6px -2px rgba(59,130,246,0.05)';
        if (type === 'primary') {
            this.style.background = 'linear-gradient(135deg, rgba(59,130,246,0.15) 0%, rgba(147,197,253,0.1) 100%)';
        } else {
            this.style.background = 'linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(147,197,253,0.05) 100%)';
            this.style.color = '#1e40af';
            this.style.borderColor = 'rgba(59,130,246,0.2)';
        }
    });
    
    button.addEventListener('mouseout', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06)';
        this.style.background = style.background;
        this.style.color = style.color;
        if (type === 'secondary') {
            this.style.borderColor = 'rgba(226,232,240,0.3)';
        }
    });
    
    return button;
}

// Funkcija za kreiranje kontejnera
function createGlassmorphismContainer(content, type = 'main') {
    const container = document.createElement('div');
    container.className = `glassmorphism-container-${type}`;
    
    const styles = {
        main: {
            background: 'linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(248,250,252,0.8) 100%)',
            border: '1px solid rgba(226,232,240,0.3)',
            borderRadius: '16px',
            padding: '24px',
            boxShadow: '0 10px 25px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05)'
        },
        secondary: {
            background: 'linear-gradient(135deg, rgba(248,250,252,0.8) 0%, rgba(241,245,249,0.6) 100%)',
            border: '1px solid rgba(203,213,225,0.3)',
            borderRadius: '12px',
            padding: '20px',
            boxShadow: '0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06)'
        }
    };
    
    const style = styles[type] || styles.main;
    
    Object.assign(container.style, {
        background: style.background,
        backdropFilter: 'blur(10px)',
        border: style.border,
        borderRadius: style.borderRadius,
        padding: style.padding,
        boxShadow: style.boxShadow,
        transition: 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)'
    });
    
    container.innerHTML = content;
    
    return container;
}

// Funkcija za kreiranje tab-a
function createGlassmorphismTab(text, icon = '', isActive = false) {
    const tab = document.createElement('button');
    tab.className = isActive ? 'glassmorphism-tab-active' : 'glassmorphism-tab-inactive';
    
    const activeStyle = {
        background: 'linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(147,197,253,0.05) 100%)',
        border: '1px solid rgba(59,130,246,0.2)',
