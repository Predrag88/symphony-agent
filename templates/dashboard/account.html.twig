{% extends 'base.html.twig' %}

{% block title %}Account Settings{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Account Settings</h1>
        <p class="text-lg text-gray-600">Upravljajte svojim profilom i postavkama</p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Information -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                <div class="text-center">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-user-circle mr-2 text-blue-600"></i>
                        Profil
                    </h3>
                    <div class="profile-avatar mb-4">
                        <div class="w-30 h-30 bg-blue-600 rounded-full flex items-center justify-center border-4 border-blue-600" style="width: 120px; height: 120px;">
                            <i class="fas fa-user text-white text-4xl"></i>
                        </div>
                        <div class="mt-3">
                            <button class="px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors text-sm" onclick="alert('Funkcija za promenu slike')">
                                <i class="fas fa-camera mr-1"></i>
                                Promeni sliku
                            </button>
                        </div>
                    </div>
                    
                    <h4 class="mb-1 text-xl font-semibold">VPA Admin</h4>
                    <p class="text-gray-500 mb-4">admin@vpa.local</p>
                    
                    <div class="flex text-center">
                        <div class="flex-1">
                            <div class="border-r border-gray-200">
                                <h5 class="text-blue-600 mb-0 text-lg font-semibold">24</h5>
                                <small class="text-gray-500">Projekti</small>
                            </div>
                        </div>
                        <div class="flex-1">
                            <div class="border-r border-gray-200">
                                <h5 class="text-green-600 mb-0 text-lg font-semibold">156</h5>
                                <small class="text-gray-500">Zadaci</small>
                            </div>
                        </div>
                        <div class="flex-1">
                            <h5 class="text-yellow-600 mb-0 text-lg font-semibold">89%</h5>
                            <small class="text-gray-500">Uspešnost</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Settings Tabs -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg">
                <!-- Tab Navigation -->
                <div class="border-b border-gray-200">
                    <nav class="flex space-x-8 px-6" id="settingsTabs">
                        <button class="nav-link py-4 px-1 border-b-2 font-medium text-sm active" data-tab="general">
                            <i class="fas fa-user mr-2"></i>
                            Opšte postavke
                        </button>
                        <button class="nav-link py-4 px-1 border-b-2 font-medium text-sm" data-tab="security">
                            <i class="fas fa-shield-alt mr-2"></i>
                            Bezbednost
                        </button>
                        <button class="nav-link py-4 px-1 border-b-2 font-medium text-sm" data-tab="notifications">
                            <i class="fas fa-bell mr-2"></i>
                            Obaveštenja
                        </button>
                        <button class="nav-link py-4 px-1 border-b-2 font-medium text-sm" data-tab="api">
                            <i class="fas fa-key mr-2"></i>
                            API ključevi
                        </button>
                    </nav>
                </div>
                
                <!-- Tab Content -->
                <div class="p-6">
                    <!-- General Settings Tab -->
                    <div id="general" class="tab-content">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Opšte postavke</h3>
                        <form>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Ime</label>
                                    <input type="text" id="firstName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" value="VPA">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Prezime</label>
                                    <input type="text" id="lastName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" value="Admin">
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                <input type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" value="admin@vpa.local">
                            </div>
                            <button type="button" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" onclick="alert('Postavke su sačuvane!')">
                                <i class="fas fa-save mr-2"></i>
                                Sačuvaj postavke
                            </button>
                        </form>
                    </div>
                    
                    <!-- Security Tab -->
                    <div id="security" class="tab-content hidden">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Bezbednost</h3>
                        <div class="space-y-6">
                            <div>
                                <h4 class="text-md font-medium text-gray-900 mb-3">Promena lozinke</h4>
                                <form>
                                    <div class="mb-4">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Trenutna lozinka</label>
                                        <input type="password" id="currentPassword" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    </div>
                                    <div class="mb-4">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Nova lozinka</label>
                                        <input type="password" id="newPassword" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    </div>
                                    <div class="mb-4">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Potvrdi novu lozinku</label>
                                        <input type="password" id="confirmPassword" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    </div>
                                    <button type="button" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" onclick="alert('Lozinka je promenjena!')">
                                        <i class="fas fa-key mr-2"></i>
                                        Promeni lozinku
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Notifications Tab -->
                    <div id="notifications" class="tab-content hidden">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Obaveštenja</h3>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Email obaveštenja za workflow-e</h4>
                                    <p class="text-sm text-gray-500">Primajte email kada se workflow završi</p>
                                </div>
                                <input type="checkbox" id="emailWorkflows" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" checked>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Email obaveštenja za greške</h4>
                                    <p class="text-sm text-gray-500">Primajte email kada dođe do greške</p>
                                </div>
                                <input type="checkbox" id="emailErrors" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" checked>
                            </div>
                            <button type="button" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" onclick="alert('Obaveštenja su sačuvana!')">
                                <i class="fas fa-bell mr-2"></i>
                                Sačuvaj obaveštenja
                            </button>
                        </div>
                    </div>
                    
                    <!-- API Keys Tab -->
                    <div id="api" class="tab-content hidden">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">API ključevi</h3>
                        <div class="space-y-6">
                            <div class="border border-gray-200 rounded-lg p-4">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="text-md font-medium text-gray-900">Production API Key</h4>
                                    <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Aktivan</span>
                                </div>
                                <p class="text-sm text-gray-500 mb-3">Koristi se za produkcijske zahteve</p>
                                <div class="flex items-center space-x-2">
                                    <code class="bg-gray-100 px-2 py-1 rounded text-sm font-mono">vpa_prod_****************************</code>
                                    <button class="text-blue-600 hover:text-blue-800" onclick="alert('API ključ je kopiran!')">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="border border-gray-200 rounded-lg p-4">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="text-md font-medium text-gray-900">Development API Key</h4>
                                    <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-full">Test</span>
                                </div>
                                <p class="text-sm text-gray-500 mb-3">Koristi se za testiranje i razvoj</p>
                                <div class="flex items-center space-x-2">
                                    <code class="bg-gray-100 px-2 py-1 rounded text-sm font-mono">vpa_dev_****************************</code>
                                    <button class="text-blue-600 hover:text-blue-800" onclick="alert('API ključ je kopiran!')">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <button type="button" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" onclick="alert('Novi API ključ je kreiran!')">
                                <i class="fas fa-plus mr-2"></i>
                                Kreiraj novi API ključ
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Simple tab switching
$(document).ready(function() {
    $('.nav-link').click(function() {
        var tabId = $(this).data('tab');
        
        // Remove active class from all tabs
        $('.nav-link').removeClass('active');
        $('.tab-content').addClass('hidden');
        
        // Add active class to clicked tab
        $(this).addClass('active');
        $('#' + tabId).removeClass('hidden');
    });
});
</script>

<style>
.nav-link.active {
    border-bottom-color: #2563eb;
    color: #2563eb;
}

.nav-link {
    border-bottom-color: transparent;
    color: #6b7280;
}

.nav-link:hover {
    color: #2563eb;
}
</style>
{% endblock %}