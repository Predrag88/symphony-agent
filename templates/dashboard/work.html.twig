{% block javascripts %}
<script>
$(document).ready(function() {
    // Task checkbox handling
    $('.task-item input[type="checkbox"]').on('change', function() {
        const taskText = $(this).closest('.task-item').find('span');
        const statusText = $(this).closest('.task-item').find('small');
        
        if ($(this).is(':checked')) {
            taskText.addClass('line-through text-gray-500').removeClass('text-gray-900');
            statusText.text('Završeno').removeClass().addClass('text-gray-500');
        } else {
            taskText.removeClass('line-through text-gray-500').addClass('text-gray-900');
            statusText.text('U toku').removeClass().addClass('text-yellow-600');
        }
    });
    
    // Auto-refresh workflow status every 30 seconds
    setInterval(checkWorkflowStatus, 30000);
});

function checkWorkflowStatus() {
    // This would typically make an AJAX call to check n8n workflow status
    console.log('Checking workflow status...');
}
</script>

