{% extends 'base.html.twig' %}

{% block title %}N8N Workflow Management{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div class="flex items-center">
                    <a href="{{ path('app_dashboard') }}" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Nazad na Dashboard
                    </a>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">N8N Workflow Management</h1>
                <div class="flex items-center space-x-4">
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full {{ webhook_status.status == 'online' ? 'bg-green-400' : 'bg-red-400' }} mr-2"></div>
                        <span class="text-sm text-gray-600">{{ webhook_status.status|title }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Workflow Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-play-circle text-indigo-400 text-2xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Ukupno izvršavanja</dt>
                                <dd class="text-lg font-medium text-gray-900">{{ workflow_stats.total_executions }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400 text-2xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Uspešna</dt>
                                <dd class="text-lg font-medium text-gray-900">{{ workflow_stats.successful_executions }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-times-circle text-red-400 text-2xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Neuspešna</dt>
                                <dd class="text-lg font-medium text-gray-900">{{ workflow_stats.failed_executions }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-clock text-blue-400 text-2xl"></i>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Poslednje izvršavanje</dt>
                                <dd class="text-sm font-medium text-gray-900">{{ workflow_stats.last_execution ? workflow_stats.last_execution|date('d.m.Y H:i') : 'Nikad' }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Workflow Controls -->
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Pokreni Workflow</h3>
                
                <form id="workflow-form" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="kratki_opis_proizvoda" class="block text-sm font-medium text-gray-700">Kratki opis proizvoda</label>
                            <input type="text" id="kratki_opis_proizvoda" name="kratki_opis_proizvoda" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Elegantna crna haljina">
                        </div>
                        
                        <div>
                            <label for="broj_i_tip_modela" class="block text-sm font-medium text-gray-700">Broj i tip modela</label>
                            <input type="text" id="broj_i_tip_modela" name="broj_i_tip_modela" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Model 2024-HD-001">
                        </div>
                        
                        <div>
                            <label for="model_pol" class="block text-sm font-medium text-gray-700">Pol modela</label>
                            <select id="model_pol" name="model_pol" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <option value="">Izaberi pol</option>
                                <option value="ženski">Ženski</option>
                                <option value="muški">Muški</option>
                                <option value="unisex">Unisex</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="godine" class="block text-sm font-medium text-gray-700">Godine modela</label>
                            <input type="text" id="godine" name="godine" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. 25-30">
                        </div>
                        
                        <div>
                            <label for="etnicka_pripadnost" class="block text-sm font-medium text-gray-700">Etnička pripadnost</label>
                            <input type="text" id="etnicka_pripadnost" name="etnicka_pripadnost" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Kavkaski">
                        </div>
                        
                        <div>
                            <label for="stil_odece" class="block text-sm font-medium text-gray-700">Stil odeće</label>
                            <input type="text" id="stil_odece" name="stil_odece" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Casual, Formalno">
                        </div>
                        
                        <div>
                            <label for="scena_okruzenje" class="block text-sm font-medium text-gray-700">Scena/Okruženje</label>
                            <input type="text" id="scena_okruzenje" name="scena_okruzenje" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Urbano, Priroda">
                        </div>
                        
                        <div>
                            <label for="aktivnost_interakcija" class="block text-sm font-medium text-gray-700">Aktivnost/Interakcija</label>
                            <input type="text" id="aktivnost_interakcija" name="aktivnost_interakcija" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Šetnja, Posao">
                        </div>
                        
                        <div>
                            <label for="osvetljenje_atmosfera" class="block text-sm font-medium text-gray-700">Osvetljenje/Atmosfera</label>
                            <input type="text" id="osvetljenje_atmosfera" name="osvetljenje_atmosfera" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Prirodno svetlo">
                        </div>
                        
                        <div>
                            <label for="stil_fotografije" class="block text-sm font-medium text-gray-700">Stil fotografije</label>
                            <input type="text" id="stil_fotografije" name="stil_fotografije" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Lifestyle, Fashion">
                        </div>
                        
                        <div>
                            <label for="perspektiva_fokus" class="block text-sm font-medium text-gray-700">Perspektiva/Fokus</label>
                            <input type="text" id="perspektiva_fokus" name="perspektiva_fokus" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Npr. Celo telo, Portret">
                        </div>
                        
                        <div>
                            <label for="slika_proizvoda" class="block text-sm font-medium text-gray-700">Slika proizvoda</label>
                            <input type="file" id="slika_proizvoda" name="slika_proizvoda" accept="image/*" class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                        </div>
                    </div>
                    
                    <div class="flex justify-end">
                        <button type="submit" id="trigger-btn" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i class="fas fa-play mr-2"></i>
                            Pokreni Workflow
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results Section -->
        <div id="results-section" class="bg-white shadow rounded-lg hidden">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Rezultati</h3>
                <div id="results-content"></div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    $('#workflow-form').on('submit', function(e) {
        e.preventDefault();
        
        const $btn = $('#trigger-btn');
        const $resultsSection = $('#results-section');
        const $resultsContent = $('#results-content');
        
        // Disable button and show loading
        $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i>Pokretanje...');
        
        // Prepare form data
        const formData = new FormData();
        const fileInput = document.getElementById('slika_proizvoda');
        
        if (fileInput.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const base64 = e.target.result.split(',')[1];
                
                const data = {
                    kratki_opis_proizvoda: $('#kratki_opis_proizvoda').val(),
                    broj_i_tip_modela: $('#broj_i_tip_modela').val(),
                    model_pol: $('#model_pol').val(),
                    godine: $('#godine').val(),
                    etnicka_pripadnost: $('#etnicka_pripadnost').val(),
                    stil_odece: $('#stil_odece').val(),
                    scena_okruzenje: $('#scena_okruzenje').val(),
                    aktivnost_interakcija: $('#aktivnost_interakcija').val(),
                    osvetljenje_atmosfera: $('#osvetljenje_atmosfera').val(),
                    stil_fotografije: $('#stil_fotografije').val(),
                    perspektiva_fokus: $('#perspektiva_fokus').val(),
                    slika_proizvoda: {
                        content: base64,
                        fileName: fileInput.files[0].name,
                        mimeType: fileInput.files[0].type
                    }
                };
                
                triggerWorkflow(data);
            };
            reader.readAsDataURL(fileInput.files[0]);
        } else {
            const data = {
                kratki_opis_proizvoda: $('#kratki_opis_proizvoda').val(),
                broj_i_tip_modela: $('#broj_i_tip_modela').val(),
                model_pol: $('#model_pol').val(),
                godine: $('#godine').val(),
                etnicka_pripadnost: $('#etnicka_pripadnost').val(),
                stil_odece: $('#stil_odece').val(),
                scena_okruzenje: $('#scena_okruzenje').val(),
                aktivnost_interakcija: $('#aktivnost_interakcija').val(),
                osvetljenje_atmosfera: $('#osvetljenje_atmosfera').val(),
                stil_fotografije: $('#stil_fotografije').val(),
                perspektiva_fokus: $('#perspektiva_fokus').val()
            };
            
            triggerWorkflow(data);
        }
        
        function triggerWorkflow(data) {
            $.ajax({
                url: '{{ path('app_n8n_workflow_trigger') }}',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    $btn.prop('disabled', false).html('<i class="fas fa-play mr-2"></i>Pokreni Workflow');
                    
                    if (response.success) {
                        $resultsContent.html(`
                            <div class="bg-green-50 border border-green-200 rounded-md p-4">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-check-circle text-green-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-green-800">Workflow uspešno pokrenut!</h3>
                                        <div class="mt-2 text-sm text-green-700">
                                            <p>Status kod: ${response.status_code}</p>
                                            <pre class="mt-2 bg-green-100 p-2 rounded text-xs overflow-auto">${JSON.stringify(response.response, null, 2)}</pre>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `);
                    } else {
                        $resultsContent.html(`
                            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-times-circle text-red-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <h3 class="text-sm font-medium text-red-800">Greška pri pokretanju workflow-a</h3>
                                        <div class="mt-2 text-sm text-red-700">
                                            <p>${response.error}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `);
                    }
                    
                    $resultsSection.removeClass('hidden');
                },
                error: function(xhr, status, error) {
                    $btn.prop('disabled', false).html('<i class="fas fa-play mr-2"></i>Pokreni Workflow');
                    
                    $resultsContent.html(`
                        <div class="bg-red-50 border border-red-200 rounded-md p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-times-circle text-red-400"></i>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">Greška pri komunikaciji</h3>
                                    <div class="mt-2 text-sm text-red-700">
                                        <p>${error}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `);
                    
                    $resultsSection.removeClass('hidden');
                }
            });
        }
    });
    
    // Auto-refresh statistics every 30 seconds
    setInterval(function() {
        location.reload();
    }, 30000);
});
</script>
{% endblock %}