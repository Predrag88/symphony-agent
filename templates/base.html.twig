<!DOCTYPE html>
<html lang="sr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}VPA Dashboard{% endblock %}</title>
    
    <!-- Cache Control Meta Tags -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta name="cache-control" content="max-age=0">
    <meta name="expires" content="Tue, 01 Jan 1980 1:00:00 GMT">
    <meta name="pragma" content="no-cache">
    
    <!-- Mobile Cache Busting -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="format-detection" content="telephone=no">
    <meta name="version" content="{{ 'now'|date('U') }}">
    <link rel="manifest" href="data:application/json,{}" crossorigin="use-credentials">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            font-family: 'Inter', sans-serif;
        }
        
        /* Loading animation */
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #3b82f6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Page transition */
        .page-content {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Chat specific global styles */
        .chat-layout {
            background: #f8f9fa;
            min-height: 100vh;
        }
        
        .chat-layout .main-content {
            background: #f8f9fa;
        }
        
        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }
        
        /* Focus styles */
        .nav-link:focus {
            outline: 2px solid #0d6efd;
            outline-offset: 2px;
        }
        
        /* Accessibility improvements */
        @media (prefers-reduced-motion: reduce) {
            .page-content {
                animation: none;
                opacity: 1;
                transform: none;
            }
            
            .nav-link {
                transition: none;
            }
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Sidebar Navigation (hidden on landing page) -->
    {% if app.request.get('_route') != 'landing' %}
    <aside class="fixed bottom-0 left-0 w-full h-20 md:top-0 md:h-full md:w-20 flex md:flex-col items-center justify-center md:justify-between bg-white shadow-lg py-2 md:py-4 z-50">
        <nav class="flex flex-row md:flex-col items-center justify-around w-full md:w-auto md:space-y-6">
            <a href="{{ path('app_dashboard') }}" class="p-3 text-gray-500 hover:bg-gray-100 hover:text-blue-600 rounded-lg transition-colors {{ app.request.get('_route') == 'app_dashboard' ? 'bg-blue-50 text-blue-600' : '' }}">
                <i class="fas fa-home fa-lg"></i>
            </a>
            <a href="{{ path('app_translator') }}" class="p-3 text-gray-500 hover:bg-gray-100 hover:text-blue-600 rounded-lg transition-colors {{ app.request.get('_route') == 'app_translator' ? 'bg-blue-50 text-blue-600' : '' }}">
                <i class="fas fa-language fa-lg"></i>
            </a>
        </nav>
        <div class="hidden md:block">
            <a href="{{ path('app_account') }}" class="p-3 text-gray-500 hover:bg-gray-100 hover:text-blue-600 rounded-lg transition-colors {{ app.request.get('_route') == 'app_account' ? 'bg-blue-50 text-blue-600' : '' }}">
                <i class="fas fa-user fa-lg"></i>
            </a>
        </div>
    </aside>
    {% endif %}

    <!-- Main Content -->
    <main class="{{ app.request.get('_route') == 'landing' ? '' : 'ml-0 md:ml-20 mb-20 md:mb-0' }} min-h-screen {{ app.request.get('_route') == 'landing' ? '' : 'p-4 md:p-8' }} {{ app.request.get('_route') == 'landing' ? '' : 'bg-gray-50' }}">
        <div class="page-content">
            {% block body %}{% endblock %}
        </div>
    </main>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    {% block javascripts %}{% endblock %}
    
    <!-- Global JavaScript -->
    <script>
        $(document).ready(function() {
            // Smooth page transitions
            $('a[href^="/"]').on('click', function(e) {
                const href = $(this).attr('href');
                if (href && href !== window.location.pathname) {
                    e.preventDefault();
                    $('.page-content').fadeOut(200, function() {
                        window.location.href = href;
                    });
                }
            });
            
            // Auto-hide alerts after 5 seconds
            $('.alert').delay(5000).fadeOut();
        });
        
        // Global AJAX setup
        $.ajaxSetup({
            beforeSend: function() {
                // Show loading indicator
                $('button[type="submit"]').prop('disabled', true).append(' <span class="loading"></span>');
            },
            complete: function() {
                // Hide loading indicator
                $('button[type="submit"]').prop('disabled', false).find('.loading').remove();
            },
            error: function(xhr, status, error) {
                console.error('AJAX Error:', error);
                alert('Došlo je do greške. Molimo pokušajte ponovo.');
            }
        });
    </script>
</body>
</html>
